{
  "compilerOptions": {
    "module": "CommonJS",              // Use CommonJS module system
    "target": "ES6",                   // Target modern JavaScript
    "outDir": "./dist",                // Output directory for compiled files
    "moduleResolution": "node",       // Ensure compatibility with Node.js-style module resolution
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in imports
    "strict": true,                   // Enable all strict type-checking options
    "esModuleInterop": true,          // Allow interoperability between CommonJS and ES modules
    "skipLibCheck": true              // Skip type checking of library .d.ts files
  },
  "include": ["**/*.ts"],             // Include all TypeScript files
  "exclude": ["node_modules", "dist"] // Exclude unnecessary directories
}
